<img src="<%= event.image_url %>" width="125" align="left" style=" margin-right: 20px; margin-bottom: 5px;">
<h3><%= link_to event.title, event %></h3>
<p style="border-bottom: 1px dashed silver;">
  <%= event.description %><br />
  Location: <%= event.location %><br />
  
  Contact: <a href="mailto:<%= event.contact_email %>"><%= event.contact_name %></a> - 
  
  <%= event.contact_phone %><br />

  <%= link_to 'Edit this Event', edit_event_path(event) %> &nbsp;|&nbsp;
  <%= link_to 'Delete this Event', event, :confirm => 'Are you sure?', :method => :delete %><br />
</p>
